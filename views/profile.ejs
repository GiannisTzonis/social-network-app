
<%- include('partials/header') -%>
<div class="fillBox">
  <a class="fill" href="/feed">Feed</a>
  <a class="fill" href="/logout">Logout</a>
</div>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <div class="data">
          <div class="dataBox">
            <p><strong>User Name</strong>: <%= user.userName %></p>
            <p><strong>Email</strong>: <%= user.email %></p>
          </div>
        </div>
        <div class="mt-5">
            <h2>Add a Post</h2>
            <div class="postBg">
              <form class="signUp" action="/post/createPost" enctype="multipart/form-data" method="POST">
                <div class="mb-3">
                    <label for="title" class="inputs">Post Title :</label>
                    <input type="text" class="form-control" id="title" name="title">
                </div>
                <div class="mb-3">
                  <label for="caption" class="inputs">Description:</label>
                  <textarea class="form-control" id="caption" name="caption"></textarea>
                </div>
                <div class="mb-3">
                  <label for="imgUpload" class="inputs">Image Upload:</label>
                  <input type="file" class="form-control" id="imageUpload" name="file">
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
              </form>
            </div>
          </div>
      </div>
      <div class="col-6">
        <h2> Previous Posts</h2>
        <ul class="gridBox">
          <% for(var i=0; i<posts.length; i++) {%>
          <li class="posted">
            
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>