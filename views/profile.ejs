<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <div class="data">
          <div class="dataBox">
            <p><strong>User Name</strong>: <%= user.userName %></p>
            <p><strong>Email</strong>: <%= user.email %></p>
            <a class="returned" href="/logout">Logout</a>
          </div>
          <br><br><br><br><br><br><br><br><br><br>
          <div>
          <a class="returned" href="/feed">Return to Feed</a>
          </div> 
        </div>
        <div class="mt-5">
            <h2>Add a post</h2>
            <form class="signUp" action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label style="color: rgb(37, 10, 10)" for="title" class="inputs">Post Title :</label>
                  <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label style="color: rgb(37, 10, 10)" for="caption" class="inputs">Description:</label>
                <textarea class="form-control" id="caption" name="caption"></textarea>
              </div>
              <div class="mb-3">
                <label style="color: rgb(37, 10, 10)" for="imgUpload" class="inputs">Image Upload:</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
          <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <h2> Previous Posts</h2>
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>